<%= form_for(@cliente) do |f| %>
  <% if @cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cliente.errors.count, "error") %> impedirão o formulário de ser salvo:</h2>

      <ul>
      <% @cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Cidade:' %><br />
    <%= f.text_field :cidade_id %>
  </div>
  <div class="field">
    <%= f.label 'Nome Fantasia:' %><br />
    <%= f.text_field :nome_fantasia %>
  </div>
  <div class="field">
    <%= f.label 'Razão Social:' %><br />
    <%= f.text_field :razao_social %>
  </div>
  <div class="field">
    <%= f.label 'CNPJ:' %><br />
    <%= f.text_field :cnpj %>
  </div>
  <div class="field">
    <%= f.label 'Endereço:' %><br />
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label 'Bairro:' %><br />
    <%= f.text_field :bairro %>
  </div>
  <div class="field">
    <%= f.label 'CEP:' %><br />
    <%= f.text_field :cep %>
  </div>
  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>
