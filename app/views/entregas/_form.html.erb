<% content_for(:head){javascript_include_tag "form"}%>

<%= form_for(@entrega) do |f| %>
  
  <% if @entrega.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entrega.errors.count, "error") %> impediram o formul√°rio de ser salvo:</h2>

      <ul>
      <% @entrega.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">  
    <%= f.label "Estado:" %><br />
    <%= f.collection_select :ufd_id, Ufd.all, :id, :nome, {:prompt => "Selecione um estado"} %>
  </div>

  <div class="field">
    <%= f.label "Cidade:" %><br />
    <%= @entrega.new_record? ? (raw "<select id='entrega_cidade_id' name='entrega[cidade_id]' type='text'/></select>") :(f.collection_select :cidade_id, @entrega.ufd.try(:cidades), :id, :nome) %>
  </div>

  <div class="field">
    <%= f.label "Cliente:" %><br />

    <%= 
      if @entrega.new_record?
        raw "<select id='entrega_cliente_id' name='entrega[cliente_id]' type='text'/></select>"
      else
        raw "<select id='entrega_cliente_id' name='entrega[cliente_id]' type='text'/><option value=#{@entrega.cliente_id}>#{@entrega.cliente.nome_fantasia}</option></select>" 
      end
    %>
  </div>
  
  <div class="field">
    <%= f.label "Data da partida:" %><br />
    <%= f.text_field :data_da_partida %>
  </div>

  <div class="field">
    <%= f.label "Data da entrega:" %><br />
    <%= f.text_field :data_da_entrega %>
  </div>

  <div class="field">
    <%= f.label "Data do retorno:" %><br />
    <%= f.text_field :data_do_retorno %>
  </div>

  <div class="field">
    <%= f.label "Motorista:" %><br />
    <select id="entrega_motorista_id" name="entrega[motorista_id]" type="text"/></select>
  </div>
  
  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
<% end %>
